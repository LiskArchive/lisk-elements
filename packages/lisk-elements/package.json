{
	"name": "lisk-elements",
	"version": "0.5.1",
	"description":
		"A default set of elements for use by clients of the Lisk network",
	"author":
		"Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
	"license": "GPL-3.0",
	"keywords": ["lisk", "blockchain"],
	"homepage":
		"https://github.com/LiskHQ/lisk-elements/tree/master/packages/lisk-elements#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LiskHQ/lisk-elements.git"
	},
	"bugs": {
		"url": "https://github.com/LiskHQ/lisk-elements/issues"
	},
	"engines": {
		"node": "6.14.1",
		"npm": "3.10.10"
	},
	"main": "dist-node/index.js",
	"scripts": {
		"format": "prettier --write \"*.{js,json}\" \"{src,test}/**/*.{js,json}\"",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"test": "NODE_ENV=test nyc mocha test",
		"test:watch": "npm test -- --watch",
		"test:watch:min": "npm run test:watch -- --reporter=min",
		"cover":
			"if [ -z $JENKINS_HOME ]; then npm run cover:local; else npm run cover:ci; fi",
		"cover:base": "NODE_ENV=test nyc report",
		"cover:local": "npm run cover:base -- --reporter=html --reporter=text",
		"cover:ci": "npm run cover:base -- --reporter=text-lcov | coveralls -v",
		"prebuild:node": "rm -r dist-node/* || mkdir dist-node | echo",
		"build:node": "babel src -d dist-node",
		"prebuild:browser": "rm ./dist-browser/lisk-elements.js ./dist-browser/lisk-elements.min.js | echo",
		"build:browser": "browserify ./dist-node/index.js -o ./dist-browser/lisk-elements.js -s lisk -t rewireify",
		"postbuild:browser": "npm run build:browser:min",
		"build:browser:min": "uglifyjs -nm -o ./dist-browser/lisk-elements.min.js ./dist-browser/lisk-elements.js",
		"prebuild": "npm run prebuild:node && npm run prebuild:browser",
		"build": "npm run build:node && npm run build:browser",
		"build:check": "node -e \"require('./dist-node')\""
	},
	"dependencies": {
		"lisk-api-client": "0.5.1",
		"lisk-constants": "0.5.1",
		"lisk-cryptography": "0.5.1",
		"lisk-passphrase": "0.5.1",
		"lisk-transactions": "0.5.1"
	},
	"devDependencies": {
		"babel-cli": "6.26.0",
		"babel-plugin-istanbul": "4.1.6",
		"babel-plugin-transform-runtime": "6.23.0",
		"babel-preset-env": "1.6.1",
		"babel-register": "6.26.0",
		"browserify": "16.0.0",
		"chai": "4.1.2",
		"eslint": "4.19.1",
		"eslint-config-airbnb-base": "12.1.0",
		"eslint-config-lisk-base": "1.0.0",
		"eslint-plugin-import": "2.11.0",
		"eslint-plugin-mocha": "5.0.0",
		"mocha": "5.1.1",
		"nyc": "11.7.1",
		"prettier": "1.12.1",
		"uglify-es": "3.3.9"
	}
}
