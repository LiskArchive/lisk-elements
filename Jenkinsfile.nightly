pipeline {
	agent { node { label 'lisk-elements' } }
	stages {
		stage('Cache dependencies') {
			steps {
				sh '''
				npm install --verbose
				BRANCH=${CHANGE_TARGET:-${BRANCH_NAME:-development}}
				if [ ! -d ~/cache/$BRANCH ]; then
					mkdir ~/cache/$BRANCH
				fi
				rsync -axl --delete ./node_modules ~/cache/$BRANCH/
				'''
			}
		}
	}
	post {
		success {
			deleteDir()
		}
	}
}
