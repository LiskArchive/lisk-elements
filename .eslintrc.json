{
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "camelcase": ["error", { "properties": "always" }],
    "eqeqeq": ["error", "always"],
    "no-eq-null": "error",
    "indent": ["error", "tab"],
    "no-use-before-define": "error",
    "new-cap": ["error", { "newIsCap": true, "capIsNewExceptionPattern": "should[.(]" }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-undef": "error",
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "strict": ["error", "global"],
    "semi": ["error", "always"],
    "no-console": ["error", { "allow": ["error", "info"] }]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "lisk": true,
    "LiskAPI": true,
    "naclFactory": true,
    "naclInstance": true,
    "Promise": true,
    "Uint8Array": true,
    "should": true,
    "sinon": true
  }
}
