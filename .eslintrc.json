{
	"extends": ["lisk-base"],
	"plugins": ["mocha"],
	"rules": {
		"import/no-extraneous-dependencies": [
			"error", {
				"devDependencies": [
					"test/**",
					"**/Gruntfile{,.js}"
				],
				"optionalDependencies": false,
				"packageDir": "./"
			}
		]
	},
	"globals": {
		"naclInstance": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js"],
					"moduleDirectory": [
						"node_modules",
						"packages"
					]
			}
		}
	}
}
